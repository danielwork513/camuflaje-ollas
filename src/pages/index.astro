---
import SectionContainer from "@/components/SectionContainer.astro";
import Card from "@/components/card/Card.astro";
import CardBody from "@/components/card/CardBody.astro";
import CardGroup from "@/components/card/CardGroup.astro";
import CardHeader from "@/components/card/CardHeader.astro";
import CardImage from "@/components/card/CardImage.astro";
import projectData from "@/data/projectData.json";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Tienda de cocina" description=".">
    <div class="main-wrapper wrap-sm grid gap-16 px-8 md:gap-24 mx-auto">
        <SectionContainer class="hero--container flex flex-col gap-8 mt-16">
            <div class="content-container">
                <div class="page-title--content max-w-[54rem] mb-1">
                    <h1
                        class="text-4xl leading-8 lg:leading-10 tracking-tight lg:tracking-tighter mb-0 font-bold"
                    >
                        Tienda de cocina
                    </h1>
                </div>
                <div
                    class="content text-2xl font-medium leading-8 lg:leading-10 tracking-tight lg:tracking-tighter text-neutral-500"
                >
                    Echale un vistazo a nuestros productos mas recientes y
                    populares.
                </div>
            </div>
        </SectionContainer>
        <!-- Header/Hero Section -->
        <SectionContainer class="projects--container">
            <h2
                class="font-medium text-h4 text-neutral-500 mb-4 leading-8 tracking-tighter"
            >
                Productos recomendados
            </h2>
            <CardGroup class="grid scroll-m-24 gap-5 grid-cols-2 w-full">
                {
                    projectData.map((project) => (
                        <Card key={project.id} className="col-span-1">
                            <CardBody>
                                <div class=" flex flex-col justify-between h-full p-5">
                                    <CardImage
                                        src={project.logo}
                                        alt="Alternative text for photo"
                                        imageClass="m-6 rounded-3xl"
                                        width={180}
                                        height={180}
                                    />
                                    <CardHeader class="">
                                        {project.title}
                                    </CardHeader>
                                    <div class="content break-words text-base md:text-xl font-medium text-neutral-500 ">
                                        <p>{project.shortExcerpt}</p>
                                    </div>
                                </div>
                            </CardBody>
                        </Card>
                    ))
                }
            </CardGroup>
        </SectionContainer>
    </div>
</Layout>
